# Add everything needed to talk with a machine with docker client
# To whom am I docked ?
#   $ dock
# Dock me to the moon
#   $ dock moon
dock() {
  if [ -z $1 ]; then
    if [ -z $DOCKER_MACHINE_NAME ]; then
      if [ -e /var/run/docker.sock ]; then
        echo "local"
        return 0
      else
        return 1
      fi
    else
      echo "$DOCKER_MACHINE_NAME"
      return 0
    fi
  else
    unset ${!DOCKER_*}
    if [ "$1" == "local" -o "$1" == "-" ]; then
      return 0
    elif [ -f ~/.dock/$1 ]; then
      source ~/.dock/$1
      return 0
    else
      if [ $(docker-machine ip $1) ]; then
        eval $(docker-machine env $1)
        return 0
      else
        return 1
      fi
    fi
  fi
}
# Bash completion for dock alias
_dock() {
    local cur machines
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    machines="local $(ls ~/.dock) $(docker-machine ls -q)"
    COMPREPLY=( $(compgen -W "${machines}" -- ${cur}) )
}
complete -F _dock dock
